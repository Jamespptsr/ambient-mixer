{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ambient Mixer",
  "version": "0.1.0",
  "identifier": "com.softmurmur.ambient-mixer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Ambient Mixer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "category": "Music",
    "shortDescription": "Ambient noise mixer for relaxation and focus",
    "longDescription": "Mix different ambient sounds like rain, thunder, ocean waves, and more to create your perfect soundscape for relaxation or concentration."
  }
}
